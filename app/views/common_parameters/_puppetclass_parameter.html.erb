<div class="fields">
  <div class="form-group <%= 'error' if f.object.errors.any? %>">
    <%= f.hidden_field :lookup_key_id, :'data-property' => 'lookup_key_id' %>
    <% puppetclass = f.object.lookup_key ? f.object.lookup_key.puppetclass || f.object.lookup_key.param_class : nil %>
    <%= text_field_tag '', (puppetclass.name rescue ''), :class => 'col-md-2', :'data-property' => 'class', :disabled => true, :title => _('Puppetclass') %>
    <%= text_field_tag '', (f.object.lookup_key.key rescue ''), :class => 'col-md-2', :'data-property' => 'name', :disabled => true, :title => _('Parameter name') %>
    <%= f.text_area :value, :rows => line_count(f, :value), :class => 'col-md-5', :'data-property' => 'value', :disabled => (not authorized_via_my_scope("host_editing", "edit_params")), :placeholder => _("Value") %>
    <%= text_field_tag '', (f.object.lookup_key.key_type rescue 'unknown'), :class=> 'hide',  :'data-property' => 'type', :disabled => true, :title => _('Parameter type') %>
    <span class="help-block">
      <%= link_to_remove_fields("remove", f) %>
    </span>
    <span class="help-block">
      <%= f.object.errors.full_messages.to_sentence %>
    </span>
  </div>
</div>
