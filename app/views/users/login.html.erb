<% content_for :title, _('Login') %>

<div id="login" class="login-container">
  <div class="aside">
    <%= image_tag("foreman_white.png", :class=>"login-logo") %>
  </div>
  <div class="section">
  <%= form_tag login_users_path, :id => "login-form" do %>
    <div class="form-group">
      <%= label_tag "login[login]", _("Username") %>
      <%= text_field :login, :login, :class=>"form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag "login[password]", _("Password") %>
      <%= password_field_tag "login[password]",nil, :class=>"form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag(_("Login").html_safe, :class => "btn btn-primary pull-right", :disable_with => _("Please wait...")) %>
    </div>
  <% end %>
  </div>
</div>
